rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Job Cards Collection - Public read, no write
    match /jobCards/{document=**} {
      allow read: if true;
      allow write: if false; // تم تعطيل الكتابة لأن النظام يستخدم LocalStorage
    }
    
    // Parts Invoices Collection - Public read and write
    match /partsInvoices/{document=**} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Default: Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
